<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ScoreItActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_container">

            <FrameLayout
                android:id="@+id/score_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.sbgapps.scoreit.widget.RippleLayout
                android:id="@+id/ripple_layout"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/header_container"
            android:background="@drawable/top_shadow"/>
    </RelativeLayout>

    <com.sbgapps.scoreit.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:src="@drawable/ic_content_create"
        app:fab_attachTo="@id/header_container"
        app:fab_attachAt="bottom_right"/>
</FrameLayout>