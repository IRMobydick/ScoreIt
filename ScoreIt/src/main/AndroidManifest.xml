<manifest
    package="com.sbgapps.scoreit"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_logo">
        <activity
            android:name="com.sbgapps.scoreit.ScoreItActivity"
            android:theme="@style/Theme.ScoreIt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.sbgapps.scoreit.AboutActivity"
            android:logo="@drawable/ic_navigation_back"
            android:parentActivityName=".ScoreItActivity"
            android:theme="@style/Theme.Adaptive">
        </activity>

        <activity
            android:name=".SavedGameActivity"
            android:logo="@drawable/ic_navigation_back"
            android:parentActivityName=".ScoreItActivity"
            android:theme="@style/Theme.Adaptive">
        </activity>
    </application>

</manifest>
