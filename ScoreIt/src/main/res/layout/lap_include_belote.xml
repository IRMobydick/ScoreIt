<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ScoreItActivity">

    <TextView
        style="@style/SubHeader"
        android:text="@string/team"/>

    <RadioGroup
        android:id="@+id/radio_group_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_activity"
        android:layout_marginRight="@dimen/margin_activity"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/them"/>

        <RadioButton
            android:id="@+id/rb_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/us"/>
    </RadioGroup>

    <View style="@style/Divider"/>

    <TextView
        style="@style/SubHeader"
        android:text="@string/progress"/>

    <com.sbgapps.scoreit.view.SeekbarPoints
        android:id="@+id/sb_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_activity"
        android:layout_marginRight="@dimen/margin_activity"/>

    <View style="@style/Divider"/>

    <TextView
        style="@style/SubHeader"
        android:text="@string/belote"/>

    <RadioGroup
        android:id="@+id/radio_group_belote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_activity"
        android:layout_marginRight="@dimen/margin_activity"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_belote_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/none"/>

        <RadioButton
            android:id="@+id/rb_belote_player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/them"/>

        <RadioButton
            android:id="@+id/rb_belote_player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"
            android:text="@string/us"/>
    </RadioGroup>

</LinearLayout>
