<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/scrollview_padding"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/top_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/SubHeader"
            android:text="@string/bidding"/>

        <com.sbgapps.scoreit.views.ToggleGroup
            android:id="@+id/bidder_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <com.sbgapps.scoreit.views.NonUncheckableToggleButton
                android:id="@+id/btn_player_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:background="@drawable/btn_toggle_selector"
                tools:textOn="@string/them"/>

            <com.sbgapps.scoreit.views.NonUncheckableToggleButton
                android:id="@+id/btn_player_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/btn_toggle_selector"
                tools:textOff="@string/us"/>
        </com.sbgapps.scoreit.views.ToggleGroup>

        <com.sbgapps.scoreit.views.SeekPoints
            android:id="@+id/input_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"/>

        <TextView
            style="@style/SubHeader"
            android:text="@string/coinche"/>

        <Spinner
            android:id="@+id/spinner_coinche"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

        <include
            layout="@layout/belote_points"/>

        <TextView
            style="@style/SubHeader"
            android:text="@string/announces"/>

        <LinearLayout
            android:id="@+id/ll_bonuses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:animateLayoutChanges="true"
            android:divider="?android:listDivider"
            android:orientation="vertical"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_add_bonus"
                style="?android:borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:text="@string/add"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>
</LinearLayout>