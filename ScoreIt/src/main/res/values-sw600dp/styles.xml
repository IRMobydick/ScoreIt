<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.HoloAccent.Light.Dialog">
        <item name="accentColor">@color/accent_color</item>
        <item name="accentColorTranslucent">@color/translucent_accent_color</item>
    </style>

    <style name="Theme.App.Adaptive">
        <item name="isDialog">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>