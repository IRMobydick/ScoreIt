<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        style="@style/SubHeader"
        tools:text="Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.sbgapps.scoreit.widget.CircleTextView
                android:id="@+id/btn_minus"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="-1"
                android:gravity="center"
                android:textColor="@color/white"/>

            <com.sbgapps.scoreit.widget.CircleTextView
                android:id="@+id/btn_minus_10"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/btn_minus"
                android:text="-10"
                android:gravity="center"
                android:textColor="@color/white"/>

            <com.sbgapps.scoreit.widget.CircleTextView
                android:id="@+id/btn_minus_100"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_marginTop="4dp"
                android:layout_below="@id/btn_minus_10"
                android:layout_toRightOf="@id/btn_minus"
                android:text="-100"
                android:gravity="center"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <com.sbgapps.scoreit.widget.MaxWidthFrameLayout
            android:layout_width="0dp"
            android:layout_height="96dp"
            app:maxWidth="96dp"
            android:layout_weight="1">

            <com.sbgapps.scoreit.widget.CircleTextView
                android:id="@+id/points"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="sans-serif-light"
                android:textSize="@dimen/font_display_1"
                app:ct_color="@color/gray_light"
                app:ct_pressed_color="#B5B5B5"
                app:ct_shadow_color="@color/gray_dark"
                tools:text="128"/>
        </com.sbgapps.scoreit.widget.MaxWidthFrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.sbgapps.scoreit.widget.CircleTextView
                android:id="@+id/btn_plus_10"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_marginBottom="4dp"
                android:text="+10"
                android:gravity="center"
                android:textColor="@color/white"/>

            <com.sbgapps.scoreit.widget.CircleTextView
                android:id="@+id/btn_plus"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_plus_10"
                android:text="+1"
                android:gravity="center"
                android:textColor="@color/white"/>

            <com.sbgapps.scoreit.widget.CircleTextView
                android:id="@+id/btn_plus_100"
                android:layout_width="@dimen/circle_btn"
                android:layout_height="@dimen/circle_btn"
                android:layout_marginTop="4dp"
                android:layout_below="@id/btn_plus_10"
                android:text="+100"
                android:gravity="center"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
