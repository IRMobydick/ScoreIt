<com.sbgapps.scoreit.navigationdrawer.NavigationDrawerItemView
    android:id="@+id/itemRR"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/navigation_drawer_list_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/default_small_padding">

    <ImageView
        android:id="@+id/navigationDrawerItemIconIV"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_small_padding"
        android:visibility="gone"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/navigationDrawerItemTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/navigationDrawerItemIconIV"
        android:textColor="@color/darker_black"
        android:textSize="20sp"
        android:textStyle="normal"
        app:typeface="roboto_medium"
        tools:text="@string/app_name"/>
</com.sbgapps.scoreit.navigationdrawer.NavigationDrawerItemView>
