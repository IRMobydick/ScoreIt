<resources>

    <style name="ToggleAppTheme" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_theme</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:background">@color/lighter_gray</item>
    </style>

    <style name="SubHeader">
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/font_headline</item>
    </style>

</resources>