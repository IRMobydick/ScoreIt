<resources>

    <style name="Theme.App" parent="Theme.HoloAccent.Light">
        <item name="accentColor">@color/accent_color</item>
        <item name="accentColorTranslucent">@color/translucent_accent_color</item>
    </style>

    <style name="Theme.App.Scoreit">
        <item name="android:windowBackground">@drawable/background_app</item>
        <item name="android:actionBarStyle">@style/ActionBar.Scoreit</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/ButtonOverflow</item>
    </style>

    <style name="Theme.App.Lap">
        <item name="android:windowBackground">@drawable/background_app</item>
        <item name="android:actionBarStyle">@style/ActionBar.Scoreit</item>
        <item name="isDialog">false</item>
    </style>

    <style name="Theme.App.NoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBar.Scoreit" parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:background">@color/transparent_accent_color</item>
    </style>

    <style name="TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="InfoTextStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>