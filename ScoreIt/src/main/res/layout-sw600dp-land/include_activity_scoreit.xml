<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ScoreItActivity">

    <View
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_extended_ab"
        android:background="@color/primary_accent_translucent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back"
        android:background="@color/lighter_gray"/>

    <View
        android:id="@+id/center_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/center_view"
        android:background="@drawable/card"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_extended_ab"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primary_accent"/>

        <FrameLayout
            android:id="@+id/secondary_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/score_container"
        android:layout_width="@dimen/card_width"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="120dp"
        android:layout_toRightOf="@id/center_view"
        android:background="@drawable/card"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="92dp"
        android:src="@drawable/ic_action_new"
        app:fab_colorNormal="@color/primary_accent"
        app:fab_colorPressed="@color/primary_accent_dark"/>

</RelativeLayout>