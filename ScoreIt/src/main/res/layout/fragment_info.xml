<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="bottom"
            android:src="@drawable/ic_app_hi_res"
            android:text="@string/app_name"
            android:textSize="@dimen/font_headline"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gray_dark"
            tools:text="ScoreIt 0.0.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="StÃ©phane Baiget"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_dark"
            tools:ignore="HardcodedText"/>

        <com.sbgapps.scoreit.widget.MaxWidthFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxWidth="420dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_default_selector"
                    android:drawableLeft="@drawable/ic_star_white_24dp"
                    android:paddingLeft="@dimen/default_small_padding"
                    android:text="@string/rate_app"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/btn_default_selector"
                    android:drawableLeft="@drawable/ic_share_white_24dp"
                    android:paddingLeft="@dimen/default_small_padding"
                    android:text="@string/share_app"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_community"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/btn_default_selector"
                    android:drawableLeft="@drawable/ic_google_plus"
                    android:text="@string/plus_community"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/btn_default_selector"
                    android:drawableLeft="@drawable/ic_email_white_24dp"
                    android:paddingLeft="@dimen/default_small_padding"
                    android:text="@string/contact_developer"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </com.sbgapps.scoreit.widget.MaxWidthFrameLayout>
    </LinearLayout>
</ScrollView>