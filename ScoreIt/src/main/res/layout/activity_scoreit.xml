<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ScoreItActivity">

    <org.arasthel.googlenavdrawermenu.views.GoogleNavigationDrawer
        android:id="@+id/navigation_drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:drawer_gravity="start"
        app:list_mainSectionsDrawables="@array/navigation_main_drawable"
        app:list_mainSectionsEntries="@array/navigation_main_sections"
        app:list_secondarySectionsDrawables="@array/navigation_secondary_drawable"
        app:list_secondarySectionsEntries="@array/navigation_secondary_sections">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fragment_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            </LinearLayout>

            <com.faizmalkani.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/margin_activity"
                android:layout_marginRight="@dimen/margin_activity"
                android:onClick="addLap"
                app:color="@color/secondary_accent"
                app:drawable="@drawable/ic_action_new"/>

        </FrameLayout>

    </org.arasthel.googlenavdrawermenu.views.GoogleNavigationDrawer>
</FrameLayout>