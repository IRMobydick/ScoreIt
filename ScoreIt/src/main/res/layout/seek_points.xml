<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:baselineAligned="false">

    <ImageButton
        android:id="@+id/btn_minus"
        android:layout_width="@dimen/circle_btn"
        android:layout_height="@dimen/circle_btn"
        android:background="@drawable/btn_round_selector_accent"
        android:src="@drawable/ic_minus"/>

    <com.sbgapps.scoreit.views.MaxWidthFrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:maxWidth="160dp">

        <com.sbgapps.scoreit.views.SeekArc
            android:id="@+id/seekarc_points"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"/>

        <TextView
            android:id="@+id/tv_points"
            android:layout_gravity="center"
            android:textSize="@dimen/font_display_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="48"/>
    </com.sbgapps.scoreit.views.MaxWidthFrameLayout>

    <ImageButton
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/circle_btn"
        android:layout_height="@dimen/circle_btn"
        android:background="@drawable/btn_round_selector_accent"
        android:src="@drawable/ic_plus"/>
</LinearLayout>