<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:scrollbars="none"
    tools:context="ScoreItActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SubHeader"
            android:text="@string/bidding"/>

        <com.sbgapps.scoreit.widget.ToggleGroup
            android:id="@+id/group_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <com.sbgapps.scoreit.widget.NonUncheckableToggleButton
                android:id="@+id/btn_player_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:background="@drawable/bg_btn_toggle"
                tools:textOn="@string/them"/>

            <com.sbgapps.scoreit.widget.NonUncheckableToggleButton
                android:id="@+id/btn_player_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/bg_btn_toggle"
                tools:textOff="@string/us"/>
        </com.sbgapps.scoreit.widget.ToggleGroup>

        <com.sbgapps.scoreit.widget.SeekPoints
            android:id="@+id/input_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_default"/>

        <com.sbgapps.scoreit.widget.BeloteInputPoints
            android:id="@+id/input_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/SubHeader"
            android:text="@string/coinche"/>

        <Spinner
            android:id="@+id/spinner_coinche"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

        <TextView
            style="@style/SubHeader"
            android:text="@string/belote"/>

        <Spinner
            android:id="@+id/spinner_belote"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    </LinearLayout>
</ScrollView>
